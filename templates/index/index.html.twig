{% extends 'base.html.twig' %}

{% block title %}Search Dummy{% endblock %}
{% import "index/hitsTable.html.twig" as hitsTable %}
{% import "index/pagination.html.twig" as pagination %}
{% block body %}
    <main class="flex-shrink-0">
        <div class="container">
            <form role="search" method="post">
                <div class="border border-dark p-2">
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.excludedAssortments) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.size) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex">
                            <input name="{{ form.term.vars.full_name }}" value="{{ form.term.vars.value }}"
                                   class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                            {{ form_widget(form._token) }}
                        </div>
                    </div>

                    {% if searchResponse %}
                        <div class="row">
                            {% for productGroup in searchResponse.productGroupCollection %}
                                <div class="col">
                                    <button name="{{ form.productGroup.vars.full_name }}"
                                            class="page-link" value="{{ productGroup.id }}">
                                        {{ productGroup.name }} ({{ productGroup.count }})
                                    </button>
                                </div>
                            {% endfor %}
                        </div>
                        <div class="row">
                            {% for facet in searchResponse.facetCollection %}
                                <div class=" col">
                                    <select name="search_form[facets][{{ facet.name }}][]"
                                            class="selectpicker" multiple title="{{ facet.name|urlDecode|raw }}">
                                        {% for value,count in facet.values %}
                                            <option value="{{ value }}"
                                                    {{ facetIsSubmitted(value, facet.name, search) ? 'selected="selected"' : '' }}
                                            >{{ value|urlDecode|raw }} ({{ count }})
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
                {% if searchResponse %}
                    {{ hitsTable.table(searchResponse.searchHitCollection) }}
                    {{ pagination.pagination(searchResponse, form) }}
                {% endif %}
            </form>
        </div>
    </main>
{% endblock %}
